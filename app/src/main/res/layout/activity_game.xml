<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:backgroundTint="@color/colorAccent">

    <LinearLayout

        android:id="@+id/label_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Player Pick"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AI Pick"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Result"
            android:textAlignment="center" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_result_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_group"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/result_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_playerpick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_aipick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/resultImag_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_winpercentage"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_playerpick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:srcCompat="@drawable/paper" />

        <ImageView
            android:id="@+id/image_aipick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/scissors" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_winpercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_group"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="TextView"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_scissors"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:backgroundTint="@android:color/holo_green_dark"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/scissors" />

        <ImageButton
            android:id="@+id/btn_paper"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:backgroundTint="@android:color/holo_green_dark"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/paper" />

        <ImageButton

            android:id="@+id/btn_rock"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_green_dark"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/rock" />
    </LinearLayout>

</RelativeLayout>

